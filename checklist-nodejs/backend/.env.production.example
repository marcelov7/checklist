# Configuração para Produção - Sistema Checklist

# Ambiente
NODE_ENV=production

# Porta do servidor
PORT=3000

# Banco de Dados
# Para PostgreSQL (Recomendado para produção)
DATABASE_URL="postgresql://username:password@localhost:5432/checklist_production"

# Para MySQL (Alternativa)
# DATABASE_URL="mysql://username:password@localhost:3306/checklist_production"

# Para SQLite (Apenas desenvolvimento/teste)
# DATABASE_URL="file:./dev.db"

# JWT Secret (OBRIGATÓRIO - Use uma chave forte e única)
JWT_SECRET="sua-chave-jwt-super-secreta-e-unica-para-producao"

# CORS Origins (URLs permitidas para acessar a API)
CORS_ORIGIN="https://seudominio.com,https://www.seudominio.com"

# Configurações de Email (se implementado)
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER="seu-email@gmail.com"
# SMTP_PASS="sua-senha-de-app"

# Configurações de Upload (se implementado)
# UPLOAD_MAX_SIZE=10485760  # 10MB
# UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,application/pdf"

# Configurações de Log
LOG_LEVEL="info"
LOG_FILE="logs/app.log"

# Configurações de Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutos
RATE_LIMIT_MAX_REQUESTS=100  # máximo de requests por janela

# Configurações de Sessão
SESSION_SECRET="sua-chave-de-sessao-super-secreta"

# Configurações de Backup (se implementado)
# BACKUP_ENABLED=true
# BACKUP_SCHEDULE="0 2 * * *"  # Todo dia às 2h
# BACKUP_RETENTION_DAYS=30

# Configurações de Monitoramento
# MONITORING_ENABLED=true
# SENTRY_DSN="https://sua-chave-sentry@sentry.io/projeto"

# Configurações de Cache (se implementado)
# REDIS_URL="redis://localhost:6379"
# CACHE_TTL=3600  # 1 hora

# Configurações de SSL/TLS
# SSL_ENABLED=true
# SSL_CERT_PATH="/path/to/certificate.crt"
# SSL_KEY_PATH="/path/to/private.key"